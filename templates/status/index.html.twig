{% extends 'template.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block main %}
    <div class="row gap-20 masonry pos-r">
        <div class="masonry-sizer col-md-6"></div>
        <div class="masonry-item col-md-6">
            <!-- #Sales Report ==================== -->
            <div class="bd bgc-white">
                <div class="layers">
                    <div class="layer w-100 p-20">
                        <h6 class="lh-1">Development issues</h6>
                    </div>
                    <div class="layer w-100">
                        <div class="table-responsive p-20">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th class=" bdwT-0">Name</th>
                                    <th class=" bdwT-0">Status</th>
                                    <th class=" bdwT-0">Date</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for todo in todos %}
                                    <tr>
                                        <td class="fw-600">{{ todo.action }}</td>
                                        <td>
                                            {% if 'TODO' == todo.status %}
                                                <span class="badge bgc-deep-purple-50 c-deep-purple-700 p-10 lh-0 tt-c badge-pill">Todo</span>
                                            {% elseif 'ON_IT' == todo.status %}
                                                <span class="badge bgc-orange-50 c-orange-700 p-10 lh-0 tt-c badge-pill">On it!</span>
                                            {% elseif 'COMPLETE' == todo.status %}
                                                <span class="badge bgc-green-50 c-green-700 p-10 lh-0 tt-c badge-pill">Complete</span>
                                            {% elseif 'WONT_DO' == todo.status %}
                                                <span class="badge bgc-red-50 c-red-700 p-10 lh-0 tt-c badge-pill">Won't do</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ todo.date|date('j M') }}</td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
